{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently asked questions linked to bots and services"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true
    },
    "answer": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["General", "Pricing", "Technical"]
    },
    "order": {
      "type": "integer"
    },
    "relatedBots": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::bot.bot"
    },
    "relatedServices": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service"
    }
  }
}
